@model Alert
@{
    var alertClass = Model == null ? null
        : Model.AlertType == AlertType.Info ? "alert-info"
        : Model.AlertType == AlertType.Error ? "alert-error"
        : Model.AlertType == AlertType.Warning ? "alert-warning"
        : "alert-success";
}

@if (Model != null)
{
    <div class="alert-wrapper">
        <div class="alert @alertClass">
            <span class="font-weight-bold">@Model.AlertType.ToString():</span>
            @Model.Message
        </div>
    </div>

    <script type="text/javascript">
        $(function () {
            $('.alert').on('click', function (e) {
                $(e.currentTarget).fadeOut(300);
            });
        });
    </script>
}